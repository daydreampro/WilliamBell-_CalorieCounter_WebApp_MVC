@model CalorieCounterV1.Models.FeaturesViewModel
@using CalorieCounterV1.Models

@{
    ViewBag.Title = "Admin - Edit Features";
}

<h2>Admin</h2>

<h4>Edit Features</h4>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <p class = "control-label col-md-2" style="font-weight:bold">Feature One</p>
            <div class="col-md-10">
                @Html.DropDownListFor(m=>m.F1, Model.Feature1Id, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Feature1Id, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <p class = "control-label col-md-2" style="font-weight:bold">Feature Two</p>
            <div class="col-md-10">
                @Html.DropDownListFor(m=>m.F2, Model.Feature2Id, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Feature2Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class = "control-label col-md-2" style="font-weight:bold">Feature Three</p>
            <div class="col-md-10">
                @Html.DropDownListFor(m=>m.F3,Model.Feature3Id, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Feature1Id, "", new { @class = "text-danger" })
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>

    </div>

}

<p>@Html.ActionLink("Cancel","AllFeatures","Admin",null,new { @class = "btn btn-default" })</p>

