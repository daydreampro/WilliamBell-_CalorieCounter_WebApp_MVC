@model CalorieCounterV1.Models.Podcast
@using CalorieCounterV1.Models
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Url.Content(Model.ImagePath)" />
        <div class="caption">
            <audio controls>
                <source src="@Url.Content(Model.AudioPath)" type="audio/mp3">
            </audio>
            <h3 class="pull-right">@Model.Info()</h3>
            <h3>
                @Model.Title
            </h3>
            <p>@Model.Description</p>
            <p>Added: @Model.Date.ToString()</p>
        </div>
    </div>
</div>
